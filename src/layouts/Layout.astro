---
import "../styles/global.css";

export interface Props {
    title?: string;
}

const { title = "Astro" } = Astro.props;
---

<!doctype html>
<html lang="en" class="dark">
    <head>
        <meta charset="utf-8" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="viewport" content="width=device-width" />
        <meta name="generator" content={Astro.generator} />
        <title>{title}</title>
        <script is:inline>
            if (window.matchMedia("(prefers-color-scheme: light)").matches) {
                document.documentElement.classList.remove("dark"); // Use light mode
            } else {
                document.documentElement.classList.add("dark"); // Default to dark mode
            }
        </script>
    </head>
    <body
        class="dark bg-gray-100 text-gray-900 dark:bg-gray-900 dark:text-white min-h-screen"
    >
        <slot />
    </body>

    <style>
        html,
        body {
            margin: 0;
            width: 100%;
            height: 100%;
        }
    </style>
</html>
