---
export const prerender = true;

import BaseLayout from "../../layouts/BaseLayout.astro";
import { getCollection, getEntry } from "astro:content";

const posts = (await getCollection("blog"))
    .filter((p) => !p.data.draft)
    .sort((a, b) => b.data.pubDate.getTime() - a.data.pubDate.getTime());

const postsWithAuthors = await Promise.all(
    posts.map(async (post) => {
        const author = await getEntry("authors", post.data.authorId);
        return { post, author };
    }),
);
---

<BaseLayout title="Blog" description="Updates, guides, and notes for builders.">
    <main class="mx-auto w-full max-w-3xl px-4 py-10 sm:px-6">
        <header class="mb-8">
            <h1 class="text-3xl font-semibold tracking-tight sm:text-4xl">
                Blog
            </h1>
            <p class="mt-2 text-lg leading-relaxed text-slate-300">
                Updates, guides, and notes for builders.
            </p>

            <div class="mt-4">
                <a
                    href="/blog/search"
                    class="text-sm font-semibold text-slate-300 hover:text-white underline-offset-4 hover:underline"
                >
                    Search posts
                </a>
            </div>
        </header>

        <ul class="grid gap-4">
            {
                postsWithAuthors.map(({ post, author }) => (
                    <li>
                        <a
                            href={`/blog/${post.slug}/`}
                            class="group block rounded-2xl border border-slate-800 bg-slate-900/40 p-5 shadow-sm transition
                   hover:border-slate-700 hover:bg-slate-900/60"
                        >
                            <div class="flex items-start justify-between gap-4">
                                <div class="min-w-0">
                                    <h2 class="truncate text-xl font-semibold tracking-tight group-hover:text-white sm:text-2xl">
                                        {post.data.title}
                                    </h2>

                                    <p class="mt-2 text-base leading-relaxed text-slate-300 sm:text-lg">
                                        {post.data.description}
                                    </p>

                                    <div class="mt-3 flex flex-wrap items-center gap-x-2 gap-y-1 text-sm text-slate-400 sm:text-base">
                                        {author ? (
                                            <span class="text-slate-300">
                                                {author.data.name}
                                            </span>
                                        ) : null}
                                        {author ? (
                                            <span class="text-slate-600">
                                                ·
                                            </span>
                                        ) : null}
                                        <time>
                                            {post.data.pubDate.toLocaleDateString(
                                                "en-CA",
                                            )}
                                        </time>
                                    </div>
                                </div>

                                <span
                                    class="shrink-0 text-slate-500"
                                    aria-hidden="true"
                                >
                                    →
                                </span>
                            </div>

                            {post.data.tags?.length ? (
                                <div class="mt-4 flex flex-wrap gap-2">
                                    {post.data.tags.map((t) => (
                                        <span class="rounded-full border border-slate-800 bg-slate-950/40 px-3 py-1 text-sm text-slate-300">
                                            {t}
                                        </span>
                                    ))}
                                </div>
                            ) : null}
                        </a>
                    </li>
                ))
            }
        </ul>
    </main>
</BaseLayout>
