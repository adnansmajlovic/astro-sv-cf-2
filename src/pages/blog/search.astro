---
export const prerender = true;
import BaseLayout from "@/layouts/BaseLayout.astro";
---

<BaseLayout title="Search" description="Search blog posts">
    <main class="mx-auto w-full max-w-3xl px-4 py-10 sm:px-6">
        <h1 class="text-3xl font-semibold tracking-tight sm:text-4xl">
            Search
        </h1>
        <p class="mt-2 text-lg text-slate-300">Type to search posts.</p>

        <div id="search" class="mt-6"></div>

        <link rel="stylesheet" href="/pagefind/pagefind-ui.css" is:inline />
        <script src="/pagefind/pagefind-ui.js" is:inline></script>
        <script is:inline>
            // Pagefind UI (zero custom JS needed)
            window.addEventListener("DOMContentLoaded", () => {
                new PagefindUI({
                    element: "#search",
                    showImages: false,
                    autofocus: true,
                });
            });
        </script>
    </main>
</BaseLayout>
